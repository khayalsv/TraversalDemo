@model List<Destination>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>

    <section class="grids-1 py-5">
        <div class="grids py-lg-5 py-md-4">
            <div class="container">
                <h3 class="hny-title mb-5">Destinations</h3>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-4 col-6">
                            <div class="column">
                                <a href="/Destination/DestinationDetails/@item.Id"><img src="@item.Image" alt="" class="img-fluid"></a>
                                <div class="info">
                                    <h4><a href="blog-single.html">@item.City</a></h4>
                                    <p>@item.Capacity </p>
                                    <div class="dst-btm">
                                        <h6 class="">Baslayan qiymetler </h6>
                                        <span>$@item.Price</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }

                </div>
            </div>
        </div>
    </section>
</body>
